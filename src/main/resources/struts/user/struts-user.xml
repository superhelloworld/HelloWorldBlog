<struts>
 <package name="user" namespace="/users" extends="struts-default">
<action name="registeone" class="com.helloworld.hwblog.user.controller.RegistoneAction" method="registeone">
             <result name="error">/WEB-INF/views/users/error.jsp</result>  
            <result name="success">/WEB-INF/views/users/registetwo.jsp</result> 
        </action>
          <action name="toRegiste" class="com.helloworld.hwblog.user.controller.RegistoneAction" method="toPage">
             <result name="topage">/WEB-INF/views/users/registeone.jsp</result>  
        </action>
        
          <action name="login" class="com.helloworld.hwblog.user.controller.LoginAction" method="login">
           <result type="redirectAction">
           <param name="namespace">/</param>
           <param name="actionName">home</param>
           </result> 
            <result name="error">/WEB-INF/views/users/error.jsp</result>  
        </action>
        
        <action name="toLogin" class="com.helloworld.hwblog.user.controller.LoginAction" method="toLogin">
             <result name="tolpage">/WEB-INF/views/users/login.jsp</result>  
        </action>
         <action name="toTest" class="com.helloworld.hwblog.user.controller.TestPageAction" method="toTest">
             <result >/WEB-INF/views/users/test.jsp</result>  
        </action>
        <action name="CreateCheckCode" class="com.helloworld.hwblog.user.util.CreateImageAction">
         <result name="success" type="stream">
                    <param name="contentType">image/jpeg</param>
                    <param name="inputName">inputStream</param>
          </result>
        </action>



</package>



</struts>